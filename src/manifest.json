{
  "name": "beacon",
  "version": "0.0.1",
  "description": "",
  "icons": {
    "16": "assets/icon/beacon_logo-16.png",
    "48": "assets/icon/beacon_logo-48.png",
    "128": "assets/icon/beacon_logo-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "background.js",
      "runtime.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "all_frames": true,
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "inject.js",
        "runtime.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "19": "assets/icon/beacon_logo-19.png",
      "38": "assets/icon/beacon_logo-38.png"
    }
  },
  "manifest_version": 2
}